<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--servlet配置信息-->
    <servlet>
        <servlet-name>LifeDemo</servlet-name>
        <servlet-class>com.bittech.servelt.a_life.LifeDemo</servlet-class>
        <init-param>
            <param-name>InitDemo</param-name>
            <param-value>com.bittech.servelt.b_Init.InitDemo</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>FormServlet</servlet-name>
        <servlet-class>com.bittech.servelt.FormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.bittech.servelt.LoginServlet</servlet-class>
    </servlet>
    
    
    
    
    
    
    
    <!--servlet映射信息-->
    <servlet-mapping>
        <servlet-name>LifeDemo</servlet-name>
        <url-pattern>/lifeDemo</url-pattern>
    </servlet-mapping>

    <!--<servlet-mapping>
        <servlet-name>InitDemo</servlet-name>
        <url-pattern>/initDemo</url-pattern>
    </servlet-mapping>-->
    <servlet-mapping>
        <servlet-name>FormServlet</servlet-name>
        <url-pattern>/formServlet</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
</web-app>